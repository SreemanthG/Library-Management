<%- include("partials/header")-%>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Book</div>
    <form class="ui form" action="/books/<%=Book._id%>?_method=PUT" method="POST">
            <div class="field">
                <label for="">Title</label>
                <input type="text" name="book[title]" placeholder="title" value="<%=Book.title%>">
            </div>
            <div class="field">
                <label for="">Image</label>
                <input type="text" name="book[image]" placeholder="image" value="<%=Book.image%>">
                
            </div>
            <div class="field">
                <label for="">Caption</label>
                <textarea name="book[body]"><%=Book.body%></textarea>
            </div>
            <div class="field">
                <input class="ui secondary button" type="submit">
            </div>
            

    </form>
</div>

<%- include("partials/footer")-%>
