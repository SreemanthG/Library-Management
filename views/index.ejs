<%- include('partials/header'); -%>

<div class="ui main text container">
    <div class="ui huge header">RESTful Library App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <%books.forEach(function(book){%>
                <div class="item">
                    <div class="image">
                        <img src="<%=book.image%>" alt="">
                    </div>
                    <div class="content">
                        <a class="header" href="/books/<%=book._id%>"><%=book.title%></a>
                        <div class="meta">
                            <span><%=new Date(book.created).toDateString()%></span>
                        </div>
                        <div class="description">
                            <p><%- book.body.substring(0,50) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/books/<%=book._id%>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>

                </div>
            <%})%>
        </div>
    </div>
</div>

<%- include('partials/footer'); -%>

